<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="325dp"
    android:layout_height="100dp"
    android:backgroundTint="@color/white"
    android:orientation="vertical"
    android:layout_gravity="end"
    android:layout_margin="15dp"
    app:cardElevation="4dp"
    app:strokeWidth="1dp">

    <TextView
        android:id="@+id/textNomePosto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Nome do posto"
        android:textSize="25sp"
        android:textColor="#000"/>

    <TextView
        android:id="@+id/textEnderecoPosto"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="45dp"
        android:layout_marginStart="10dp"
        android:text="EndereÃ§o do posto"
        android:textSize="16sp"
        android:textColor="#000"/>
    <TextView
        android:id="@+id/textDistanciaPosto"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="70dp"
        android:layout_marginStart="10dp"
        android:text="Distancia do posto"
        android:textSize="14sp"
        android:textColor="@color/card"/>

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/outline_add_location_24"
        android:layout_gravity="end"
        android:layout_margin="15dp"
        />

</com.google.android.material.card.MaterialCardView>
